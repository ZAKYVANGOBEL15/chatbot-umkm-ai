rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Aturan untuk data User
    match /users/{userId} {
      // Izinkan User akses data profilnya sendiri
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Izinkan User akses sub-collection 'products'
      match /products/{productId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // [BARU] Izinkan User akses sub-collection 'customers' (Data Pelanggan)
      match /customers/{customerId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // [BARU] Izinkan User akses sub-collection 'faqs' (FAQ Knowledge Base)
      match /faqs/{faqId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
